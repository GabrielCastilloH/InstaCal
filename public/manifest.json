{
    "manifest_version": 3,
    "name": "InstaCal",
    "version": "1.0.0",
    "description": "Add events to Google Calendar with natural language.",
    "icons": {
        "16": "icons/logo-16.png",
        "48": "icons/logo-48.png",
        "128": "icons/logo-128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "InstaCal",
        "default_icon": {
            "16": "icons/logo-16.png",
            "48": "icons/logo-48.png"
        }
    },
    "permissions": [
        "identity",
        "storage"
    ],
    "host_permissions": [
        "https://www.googleapis.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}